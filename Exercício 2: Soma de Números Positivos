import java.util.Scanner; // Importa o Scanner para ler o que o usuário digitar

public class SomaNumerosPositivos {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in); // Cria o scanner
        int numero;
        int soma = 0; // Começa a soma em zero

        System.out.println("Digite um número positivo (número negativo para sair):");

        numero = scanner.nextInt(); // Lê o primeiro número

        while (numero >= 0) { // Enquanto o número for positivo ou zero
            soma += numero; // Soma o número ao total
            System.out.println("Digite outro número positivo (número negativo para sair):");
            numero = scanner.nextInt(); // Lê o próximo número
        }

        System.out.println("Soma total dos números positivos: " + soma);

        scanner.close(); // Fecha o scanner (boa prática!)
    }
}
